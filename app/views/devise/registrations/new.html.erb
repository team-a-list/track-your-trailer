
  <div class="span12">
  <h2>Sign up</h2>

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <br>

    <div><%= f.label :name %>
    <%= f.text_field :name, :autofocus => true %></div><br>

    <div><%= f.label :email %>
    <%= f.email_field :email %></div><br>

    <div><%= f.label :phone_number %>
    <%= f.phone_field :phone_number, :placeholder => "(optional)" %></div><br>

    <div><%= f.label :password %>
    <%= f.password_field :password %></div><br>

    <div><%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %></div><br>

    <div><%= f.submit "Sign up", class: "btn" %></div><br>
  <% end %>

  <%= render "devise/shared/links" %>
  </div>



